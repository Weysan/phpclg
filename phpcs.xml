<?xml version="1.0"?>
<ruleset name="PHPCLG Standards">
    <description>The Laravel Coding Standards</description>
    <file>./</file>
    <exclude-pattern>./vendor/*</exclude-pattern>
    <arg name="report" value="summary"/>
    <arg name="colors"/>
    <arg value="p"/>
    <ini name="memory_limit" value="128M"/>
    <rule ref="PSR2"/>

</ruleset>
